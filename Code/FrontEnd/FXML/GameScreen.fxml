<GridPane prefHeight="50.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FrontEnd.GameScreenController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="300.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="60.0" percentHeight="10.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="150.0" percentHeight="45.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="150.0" percentHeight="45.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
       <VBox GridPane.columnSpan="5">
           <MenuBar>
               <Menu mnemonicParsing="false" text="File">
                   <MenuItem fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButton" text="Save" />
                   <MenuItem mnemonicParsing="false" text="Load" />
                   <MenuItem mnemonicParsing="false" onAction="#onQuitButton" text="Quit" />
               </Menu>
               <Menu mnemonicParsing="false" text="Help">
                   <MenuItem mnemonicParsing="false" text="About" />
               </Menu>
           </MenuBar>
           <Label fx:id="phaseText" text="Phase" textFill="#a7c3a7">
              <font>
                  <Font name="Book Antiqua" size="22.0" />
              </font>
           </Label>
       </VBox>
      <Button id="addCard" mnemonicParsing="false" onAction="#onButtonPressed" prefWidth="100.0" text="AddCard" GridPane.columnIndex="4" GridPane.rowIndex="2" />
      <Pane fx:id="tiles" layoutX="200.0" layoutY="100.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP" />
      <Pane fx:id="players" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP" />
      <Pane fx:id="controls" layoutX="310.0" layoutY="70.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP" />
       <ScrollPane GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2">
           <HBox id="cards" fx:id="cards" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" style="-fx-background-color: #555;">
               <opaqueInsets>
                   <Insets top="25.0" />
               </opaqueInsets>
               <padding>
                   <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
           </HBox>
       </ScrollPane>
      <Button fx:id="drawButton" mnemonicParsing="false" onAction="#onDrawButton" text="Draw" GridPane.columnIndex="4" GridPane.rowIndex="1" />
   </children>
</GridPane>
